<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="roman.com.cryptobox">

    <!-- app premissions -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="roman.com.cryptobox.utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity android:name=".activities.NotesActivity">
        </activity>
        <activity
            android:name=".activities.EditorActivity"
            android:label="@string/title_activity_editor"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activities.NotesActivity">
        </activity>
        <activity
            android:name=".activities.ExplainActivity"
            android:label="@string/title_activity_explain"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".activities.CreateActivity">
            android:name=".login.CreatActivity"
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ExplainActivity"/>
        </activity>
    </application>

</manifest>